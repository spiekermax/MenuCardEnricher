<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_navigateBack"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:text="   Navigate back"
        android:drawableLeft="@drawable/ic_back_black"/>

    <TextView
        android:id="@+id/tv_increase"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:text="   Increase quantity of the dish"
        android:drawableLeft="@drawable/ic_add_black"/>

    <TextView
        android:id="@+id/tv_decrease"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:text="   Decrease quantity of the dish"
        android:drawableLeft="@drawable/ic_remove_black"/>

    <TextView
        android:id="@+id/tv_readAloud"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:text="   Read aloud dish"
        android:drawableLeft="@drawable/ic_volume_up_black"/>

    <TextView
        android:id="@+id/tv_Scan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:text="   Scan new menu"
        android:drawableLeft="@drawable/ic_addphoto_black"/>

    <TextView
        android:id="@+id/tv_navigateOrder"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:text="   Navigate to order"
        android:drawableLeft="@drawable/ic_order_black"/>


    <Button
        android:id="@+id/info_menu_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="Close"
        app:layout_constraintTop_toBottomOf="@+id/tv_info_menu" />
</LinearLayout>